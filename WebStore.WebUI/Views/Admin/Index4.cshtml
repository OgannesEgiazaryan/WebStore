@model IEnumerable<WebStore.Domain.Entities.Reviews>

@{
    ViewBag.Title = "Админ панель: список отзывов";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
function confirmDeletion() {
        return confirm('Вы уверены, что хотите удалить этот отзыв?');
}
</script>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список отзывов</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Дата</th>
                <th>Рейтинг</th>
                <th>Программа</th>
                <th class="text-center">Действия</th>
            </tr>
            @foreach (var review in Model)
            {
                <tr>
                    <td class="text-right">@review.ID_Review</td>
                    @Html.Hidden("reviewID", review.ID_Review)
                    <td>@review.Date.ToString("dd.MM.yyyy")</td>
                    <td>@review.Rating</td>
                    <td>@review.Software.Name</td>
                    <td class="text-center">
                        @Html.ActionLink("Редактировать", "Edit", new { reviewID = review.ID_Review }, new { @class = "btn btn-default btn-xs" })
                        @using (Html.BeginForm("Delete", "Admin4"))
                        {
                            @Html.Hidden("reviewID", review.ID_Review)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Удалить"
                                   onclick="return confirmDeletion();" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить отзыв", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</div>
