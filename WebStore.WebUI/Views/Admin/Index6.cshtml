@model IEnumerable<WebStore.Domain.Entities.SoftWares>

@{
    ViewBag.Title = "Админ панель: Отчетность";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    decimal totalRevenue = 0;
    int totalSales = 0;

    foreach (var item in Model)
    {
        totalRevenue += item.Price * item.Count_Sale;
        totalSales += item.Count_Sale;
    }
}

<!-- Скрипт для неработающего графика СКРИПТЫ НЕПРАВИЛЬНО ЗАГРУЖАЮТСЯ
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function() {
        $('#dateRangeForm').on('submit', function(e) {
            e.preventDefault();

            console.log("Form submitted");

            $.ajax({
                url: 'Url.Action("Report", "Admin")',
                type: 'POST',
                data: $(this).serialize(),
                success: function(data) {
                    console.log("Data received:", data);

                    if (data.length === 0) {
                        alert("Нет данных за выбранный период.");
                        return;
                    }

                    var dates = data.map(x => x.Date);
                    var totalSales = data.map(x => x.TotalSales);
                    var totalRevenue = data.map(x => x.TotalRevenue);

                    var ctx = document.getElementById('salesChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: dates,
                            datasets: [
                                {
                                    label: 'Total Sales',
                                    data: totalSales,
                                    borderColor: 'blue',
                                    fill: false
                                },
                                {
                                    label: 'Total Revenue',
                                    data: totalRevenue,
                                    borderColor: 'green',
                                    fill: false
                                }
                            ]
                        },
                        options: {
                            scales: {
                                x: {
                                    type: 'time',
                                    time: {
                                        unit: 'day',
                                        tooltipFormat: 'll' // Use moment.js format for tooltips
                                    }
                                }
                            }
                        }
                    });
                },
                error: function(xhr, status, error) {
                    console.error("Error:", error);
                    alert("Ошибка при загрузке данных. Попробуйте еще раз.");
                }
            });
        });
    });
</script>
